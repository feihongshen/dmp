                <level value="DEBUG" />
        </logger>
        <logger name="java.sql.ResultSet" additivity="true">
                <level value="DEBUG" />
        </logger> -->
	

	<root level="info">
	<!--<appender-ref ref="STDOUT" /> -->
	   <appender-ref ref="logfile" />
	</root>
</configuration>  